{
  "manifest_version": 3,
  "name": "自动点击器 Auto Clicker",
  "version": "1.0",
  "description": "自动点击屏幕指定坐标，可自定义位置。",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "cookies",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "48": "icons/favicon.ico",
      "192": "icons/favicon-192x192.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}